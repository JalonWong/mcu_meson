{
    "version": "2.0.0",
    "problemMatcher": [
        "$meson-gcc"
    ],
    "tasks": [
        {
            "label": "Build",
            "command": "meson",
            "args": [
                "compile",
                "app",
                // "--verbose",
            ],
            "options": {
                "cwd": "builddir"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Test",
            "command": "meson",
            "args": [
                "test",
            ],
            "options": {
                "cwd": "builddir-native"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
        }
    ]
}
